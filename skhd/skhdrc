# Equalize size of windows
ctrl + alt - e : yabai -m space --layout bsp && yabai -m space --balance && sketchybar --reload

# Rotate windows clockwise and anticlockwise
ctrl + alt - r         : yabai -m space --rotate 270
ctrl + alt + shift - r : yabai -m space --rotate 90

# Rotate on X and Y Axis
ctrl + alt - x : yabai -m space --mirror x-axis
ctrl + alt - y : yabai -m space --mirror y-axis

# Map Ctrl + W to Option + Backspace when iTerm2 is not focused
ctrl - w [
    *        : skhd -k "alt - backspace"
    "wTerm2" ~
]
